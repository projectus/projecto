<%= form_for(@project) do |f| %>
  <%= render 'errors' %>
<div class="row-fluid">
<div class="span12">
    <fieldset>
      <legend>Enter project details</legend>

      <div class="row-fluid">
        <%= f.label :name, "Project Name" %>
        <%= f.text_field :name, autocomplete: :off, :placeholder=>"Project Name" %>
      </div>

      <div class="row-fluid">
        <%= f.label :category, "Project Category" %><br>
        <%= f.select(:category, Project::CATEGORIES.map(&:capitalize)) %>
      </div>

      <div class="row-fluid">
        <%= f.label :description, "Project Description" %><br>
        <%= f.text_area :description, :placeholder=>"Project Description" %>
      </div>

      <div class="row-fluid">
        <%= f.label :tag_list, "Tags (separated by commas)" %><br />
        <%= f.text_field :tag_list, autocomplete: :off, :placeholder=>"Project Tag"%>
      </div>

      <div class="field photo-attachment-container">
        <div class="wrapper">
          <%= f.file_field :image, :size=>"5" %>
        </div>
        <a class="btn btn-primary">Select a file</a>
      </div>

      <div class="actions">
        <%=f.submit "Submit Application", class: "btn btn-primary" %>
      </div>
    </fieldset>
</div>
</div>
<% end %>
