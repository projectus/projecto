    <% end %>
  </ul>

  <div class="project-div">
    <% @projects.each do |project| %>
        <div class="project-box">
          <div class="project-image-box">
            <%= link_to image_tag("http://www.ivoinc.com/docs/Projects/projects-hi-res.png"), project.profile %>
