  <h4>Browse Project</h4>

  <ul class="nav nav-pills project-tab">
    <li class="<%= 'active' if category_selected?('all') %>"><%= link_to 'All', projects_path %></li>
    <% Project.categories.each do |cat| %>
        <li class="<%= 'active' if category_selected?(cat) %>"><%= link_to cat, cat_path(cat), :remote => true %></li>
    <% end %>
  </ul>

  <div class="project-div">
    <% @projects.each do |project| %>
        <div class="project-box">
          <div class="project-box-inner">
            <div class="project-image-box">
              <img src="http://www.ivoinc.com/docs/Projects/projects-hi-res.png" />
            </div>

            <div class="project-image-box-bottom">

            </div>

            <div class="title-font">

              <%= link_to project.name, project.profile %>

            </div>

            <div class="project-box-owner">
                <!--<img src="http://png-4.findicons.com/files/icons/61/dragon_soft/16/user.png" /> -->
              <%= project.owner.username %>
            </div>

            <div class="project-box-category">

              <%= project.category.capitalize %>

            </div>


            <div class="project-description">

              <%= project.description %>
            </div>

            <div class="project-action-bar-splitter"></div>


            <div class="project-action-panel">
                <div class="project-box-members">
                       1 <br>Member
                </div>
                  <div class="project-box-subscribers">

                  </div>
                  <div class="project-box-age">

                  </div>

            </div>


          </div>



        </div>
    <% end %>
  </div>


</div>
