<%= render 'new' %>

<div class="single-comment-div">
  <div class="avatar">
    <img src="http://catenacycling.com/frontend/themes/catena/core/layout/images/avatar_placeholder.png" />
  </div>



</div>




<table class="table table-striped table-bordered box">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Plus</th>
      <th>Minus</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.includes(user: :profile).each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= link_to comment.user.username, comment.user.profile %></td>
        <td><%= comment.plus %></td>
        <td><%= comment.minus %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

