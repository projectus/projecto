
<%= form_for(@comment) do |f| %>
  <%= render 'errors' %>
	<div class="row-fluid">
	  <div class="span10 comment-input">
      <%= f.text_area :content %>
    </div>
    <div class="span2">
      <%= user_avatar_tag(current_user,:thumb) %><br>
      <%= f.submit 'Comment', class: 'btn' %>
    </div>
  </div>
  <div>
    <%= f.hidden_field :project_id %>
  </div>
<% end %>

