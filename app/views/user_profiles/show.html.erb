<div id="user-skills" class="well well-small">
  <h2>Skills</h2>
  <ul class="nav nav-pills">
    <%= render partial: 'skill', object: 'C++' %>
    <%= render partial: 'skill', object: 'Java' %>
    <%= render partial: 'skill', object: 'Ruby' %>
    <%= render partial: 'skill', object: 'League of Legends' %>
  </ul>
</div>

<div id="user-portfolio" class="well well-small">
  <h2>Portfolio</h2>
  <div id="user-portfolio-interior">
	  <div class="row-fluid">
	  <% associated_user.gallery.images.each_with_index do |image,i| %>
		<div class="modal fade" id="gallery<%= i %>" tabindex="-1" role="dialog" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		        <h4 class="modal-title">Image</h4>
		      </div>
		      <div class="modal-body">
		        <p><%= image_tag image.image.url %></p>
		      </div>
		    </div><!-- /.modal-content -->
		  </div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
	  <% if i%4 == 0 %>
	    </div>
	    <div class="row-fluid">
		<% end %>
	    <div class="span3">
			  <a data-toggle="modal" href="#gallery<%= i %>"><%= gallery_image_tag(image) %></a>
	    </div>
	  <% end %>
	  </div>
  </div>
