

<%= form_for(@user_profile) do |f| %>
  <% if @user_profile.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user_profile.errors.count, "error") %> prohibited this profile from being saved:</h3>

      <ul>
      <% @user_profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="edit-contact-card-div">
    <div class="edit-contact-card">
      <div class="field" id="name_field">
        <%= label "name", "Name" %>
        <%= text_field "first_name", "first_name", :placeholder => "First Name" %>
        <%= text_field "middle_name", "middle_name", :placeholder => "Middle Name" %>
        <%= text_field "last_name", "last_name", :placeholder => "Last Name" %>
      </div>

      <div class="field">
        <%= label "Email", "Email" %>
        <%= text_field "secondary_email", "email", :placeholder => "Secondary Email"  %>
      </div>

      <div class="field">
        <%= label "birthdate", "Date of Birth" %>
        <%= select_year Date.today, start_year: 1900, end_year: 2000 %>
        <%= select_month Date.today %>
        <%= select_day Date.today %>
      </div>

      <div class="field">
        <%= label "location", "location" %>
        <%= text_field "location", "location" %>
      </div>

      <div class="field">
        <%= f.hidden_field :card_hash %>
      </div>



    </div>

    <div>

      dfdfddd
    </div>

  </div>

  <div class="edit-resume-div">
    <div class="edit-resume">
      <div class="field">
        <%= f.label :resume_hash %><br>
        <%= f.text_area :resume_hash %>
      </div>

    </div>


  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
