<div class="inner-heading-div">
    <p>General Project Settings
      <%= link_to 'Edit Project Settings', edit_project_path(@project_profile.project), class: 'btn pull-right btn-inner-small' %>
    </p>

</div>

<div class="scroll-splitter"></div>

<%= render partial: 'project_details_entry/entry', locals: {entry: {title: 'Project Name', content: @project_profile.project.name}}%>

<%= render partial: 'project_details_entry/entry', locals: {entry: {title: 'Project Owner', content: @project_profile.project.owner.username}}%>

<%= render partial: 'project_details_entry/entry', locals: {entry: {title: 'Project Category', content: @project_profile.project.category.capitalize}}%>

<%= render partial: 'project_details_entry/entry', locals: {entry: {title: 'Project Description', content: @project_profile.project.description}}%>

<div class="inner-heading-div">
  <p>Custom Project Information
    <%= link_to 'Edit Details', edit_project_profile_path(@project_profile), class: 'btn pull-right btn-inner-small' %>
  </p>
</div>

<div class="scroll-splitter"></div>

<% @details.sort.map do |key,entry| %>
  <%= render partial: 'project_details_entry/entry', locals: {entry: entry} %>
<% end %>

