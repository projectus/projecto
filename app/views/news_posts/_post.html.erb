<div class="news-post">
  <span class="news-title"><%= post.title %></span>

  <div class="news-poster">Posted by: <%= link_to_user_profile(post.user) %>
  | <%= post.species.capitalize %> Post
  </div>

  <p class="pcontent"><%= post.content %><br></p>

  <div> 
	  <%= link_to 'Edit', edit_news_post_path(post), :class => "btn btn-inner-small" %>
  </div>	
</div>