<%= form_for(@news_post) do |f| %>
  <%= render 'errors' %>

  <div class="field">
    <%= f.text_field :title, :placeholder => "News Heading" %>
  </div>

  <div class="field">
    <%= f.text_area :content, class: 'input-xxlarge', :placeholder => "News Content"  %>
  </div>

  <%= f.hidden_field :project_id %>    

  <div>
    <%= f.submit 'Post News', class: 'btn btn-inner-small' %>
  </div>
<% end %>

