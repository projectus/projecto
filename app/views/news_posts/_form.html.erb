<%= form_for(@news_post) do |f| %>
  <%= render 'errors' %>
  <%= f.text_field :title, :placeholder => "News Heading" %><br/>
  <%= f.text_area :content, class: 'input-xxlarge', :placeholder => "News Content"  %><br/>
  <%= f.hidden_field :project_id %>    
  <%= f.submit 'Post News', class: 'btn btn-success' %>
<% end %>

