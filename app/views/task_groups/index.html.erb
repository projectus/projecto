<table class="table table-striped table-bordered taskgroup-table">
  <thead>
  <tr>
    <th colspan="8">Task Group</th>

  </tr>
  </thead>

  <tbody>
  <% @task_groups.each_with_index do |task_group,index| %>
      <tr>
        <td colspan="8"><%#= task_group.name %>
        <%= render partial: 'group', object: task_group %>
        </td>
      </tr>

      <tr class="tasktable-header">
        <td></td>
        <td>Task Name</td>
        <td>Task Description</td>
        <td>Priority</td>
        <td>Task Status</td>
        <td>Task Poster</td>
        <td>Edit</td>
        <td>Delete</td>

      </tr>

      <% task_group.tasks.each do |task| %>
          <tr>
            <td style="text-align: center"><img src="https://cdn1.iconfinder.com/data/icons/twotiny_expansion/icons/options-edit.gif">
            </td>
            <td><%= link_to task.title, task %></td>
            <td><%= task.details %></td>
            <td><%= task.priority %></td>
            <td><%= task.status %></td>
            <td><%= task.poster.username %></td>
            <td><%= link_to '<img src="https://cdn3.iconfinder.com/data/icons/linecons-free-vector-icons-pack/32/pen-16.png">'.html_safe, edit_task_path(task) %></td>
            <td><%= link_to '<img src="https://cdn3.iconfinder.com/data/icons/linecons-free-vector-icons-pack/32/trash-16.png">'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>

  <% end %>
  </tbody>
</table>

<p>
<%= link_to 'New Task group', new_project_task_group_path, class: 'btn' %>
  <%= link_to 'New Task', new_project_task_group_path, class: 'btn' %>
</p>
