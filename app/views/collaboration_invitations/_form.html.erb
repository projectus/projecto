<%= form_tag collaboration_invitations_path, method: "post" do |f| %>
  <%= render partial: 'errors' %>

  <div class="row-fluid">
		<%= select_tag(:project_id, current_user.owned_projects.collect {|p| [ p.name, p.id ] }) %>
  </div>
 
  <div class="row-fluid">
    <%= label_tag :message %>
    <%= text_area_tag :message %>    
  </div>
    
  <%= hidden_field_tag :invited_user_id, associated_user.id %>
  
  <div class="actions">
    <%= submit_tag 'Invite', class: 'btn btn-inner-small' %>
  </div>
<% end %>
