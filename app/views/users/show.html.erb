<br>
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Encrypted password:</strong>
  <%= @user.encrypted_password %>
</p>

<p>
<strong>Collaborations:</strong>
<% @user.collaborations.each do |collab| %>
  <br>
  Role: <%= collab.role %>, Project name: <%= collab.project.name %>
<% end %>
</p>

<% form_for :invitation do |f| %>
  <%= hidden_field(:user, :id) %>
  <%= f.submit %>
<% end %>

<%= link_to 'Invite to project', new_user_collaboration_invitation_path(@user) %> | 
<%= link_to 'Back', users_path %>
