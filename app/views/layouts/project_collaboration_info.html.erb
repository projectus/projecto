<% content_for :project_profiles_content do %>
  <p>
	  <b>Project owned by:</b> 
	  <%= link_to associated_project.owner.username, associated_project.owner.profile %>
	</p>
  <ul class="nav nav-tabs">
    <li class="<%= tab_class('collaborations') %>">
      <%= link_to 'Current Collaborators', project_collaborations_path(associated_project) %>
    </li>
    <li class="<%= tab_class('applications') %>">
      <%= link_to 'Applications Received', project_applications_path(associated_project) %>
    </li>
    <li class="<%= tab_class('invitations') %>">
      <%= link_to 'Invitations Sent', project_invitations_path(associated_project) %>
    </li>
  </ul>
  <%= content_for?(:project_collaboration_info_content) ? yield(:project_collaboration_info_content) : yield %>
<% end %>

<%= render template: "layouts/project_profiles" %>