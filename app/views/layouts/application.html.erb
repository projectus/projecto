<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "Projecto" %></title>
  <%#= javascript_include_tag "jquery" %>
  <%= stylesheet_link_tag    "application" %>
  <%#= javascript_include_tag "vendor/custom.modernizr" %>
  <%#= javascript_include_tag :defaults, "http://localhost:9292/faye.js" %>

  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>

<body>

  <div class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-inner">
	    <ul class="nav">
		    <li><%= link_to "PROJECTORE", root_path, class: "navbar-brand brand" %></li>
        <li>
          <%= form_tag projects_path, method: :get, class: "navbar-form" do %>
              <div class="input-prepend">
                <span class="add-on">@</span>
                <%= text_field_tag :tag, nil, class: 'input-xlarge search-query', placeholder: 'Search for Projects?' %>
              </div>

              <%= submit_tag 'Search', class: 'btn', name: nil %>
          <% end %>
        </li>
      </ul>
      <ul class="nav pull-right">
        <li class="dropdown">
          <a data-toggle="dropdown" class="dropdown-toggle" href="#">About <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li class="nav-header">Nav header</li>
            <li><a href="#">Separated link</a></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>

        <% if user_signed_in? %>
          <li>
            <div class="btn-group">
              <a class="btn" href="<%= user_profile_path(current_user.profile) %>"><i class="icon-user icon-black"></i><%= current_user.username %></a>
              <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret caret-white"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#"><i class="icon-pencil"></i>Account</a></li>
                <li><a href="#"><i class="icon-trash"></i><%= link_to "Profile", current_user.profile %></a></li>
                <li><a href="#"><i class="icon-ban-circle"></i> Ban</a></li>
                <li class="divider"></li>
                <li><a href="#"><i class="i"></i> Make admin</a></li>
              </ul>
            </div>

          </li>

          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
	        <li><%= link_to "Sign up", new_user_registration_path %></li>
	        <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="alerts">
    <% flash.each do |name, msg| %>
      <div class="<%= bootstrap_alert_type(name) %>">
	      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  </div>

  <div class="row-fluid">
    <div class="span10 offset1">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </div>


    <div class="footer">
 
    </div>


</body>
</html>
