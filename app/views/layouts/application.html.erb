<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "Cahoodea" %></title>
  <%= favicon_link_tag %>
  <%#= javascript_include_tag "jquery" %>
  <%= stylesheet_link_tag "application" %>

  <link href='http://fonts.googleapis.com/css?family=Lily+Script+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Denk+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Merienda+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Francois+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Happy+Monkey' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Rationale' rel='stylesheet' type='text/css'>
  <%#= javascript_include_tag "vendor/custom.modernizr" %>
  <%#= javascript_include_tag :defaults, "http://localhost:9292/faye.js" %>

  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>

<body>

	
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div id="nav-center">
	    <ul class="nav nav-left">
        <li><%= image_tag 'site/puzzle-icon.png', class: 'logo' %></li>
		    <li id="logo-li"><a class="brand" href="<%= root_path %>">Cahoodea</a></li>
        <li>
          <%= form_tag projects_path, method: :get, class: "navbar-form" do %>
            <div class="input-prepend">
              <span class="add-on"><i class="icon-search"></i></span>
              <%= text_field_tag :tag, nil, class: 'input-xlarge', id: 'searchbar', placeholder: 'Search' %>
            </div>
          <% end %>
        </li>
      </ul>
      <ul class="nav pull-right nav-links">
        <li class="nav-li"><div class="li-hover-top"></div><div class="navbar-about"><%= link_to "What is Projectore?", about_path, :class => "multiline white" %></div></li>
        <li class="nav-li"><div class="li-hover-top"></div><div class="navbar-projects"><%= link_to "Browse Projects", projects_path, :class => "multiline white" %></div></li>
        <li class="nav-li"><div class="li-hover-top"></div><div class="navbar-projects"><%= link_to "Start Project", new_project_path, :class => "multiline white" %></div></li>

        <% if user_signed_in? %>
        <li>
          <div class="btn-group">
            <a class="btn" href="<%= user_profile_path(current_user.profile) %>"><i class="icon-user icon-black"></i> <%= current_user.username %></a>
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret caret-white"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Profile", user_profile_path(current_user.profile) %>
              </li>
              <li>
                <%= link_to 'Invitations', user_invitations_path(current_user) %>
              </li>
              <li>
                <%= link_to 'Applications', user_applications_path(current_user) %>
              </li>
              <li>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
              </li>

            </ul>
          </div>
        </li>

        <li class="nav-li"><div class="li-hover-top"></div><%= link_to "Sign Out", destroy_user_session_path, :class => "white", method: :delete %></li>
        <% else %>
	      <li class="nav-li"><div class="li-hover-top"></div><%= link_to "Sign Up", new_user_registration_path, :class => "white" %></li>
	      <li class="nav-li"><div class="li-hover-top"></div><%= link_to "Sign In", new_user_session_path, :class => "white" %></li>
        <% end %>

      </ul>
    </div>
  </div>
</div>

  <div id="alerts">
    <% flash.each do |name, msg| %>
      <div class="<%= bootstrap_alert_type(name) %>">
	      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  </div>

  <% if current_page?(root_url) and not user_signed_in? %>

    <%= render 'introbar' %>

  <% end %>

  <div id="content" class="container">
    <%= content_for?(:content) ? yield(:content) : yield %>
  </div>

</body>
</html>
