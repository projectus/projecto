<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "Projectore" %></title>
  <%= favicon_link_tag %>
  <%#= javascript_include_tag "jquery" %>
  <%= stylesheet_link_tag    "application" %>

  <link href='http://fonts.googleapis.com/css?family=Lily+Script+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Denk+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Merienda+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Francois+One' rel='stylesheet' type='text/css'>
  <%#= javascript_include_tag "vendor/custom.modernizr" %>
  <%#= javascript_include_tag :defaults, "http://localhost:9292/faye.js" %>

  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>

<body>


<div id="scroll">

	
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner white" id="navbar-inner">
    <div id="nav-center">
	    <ul class="nav">

		    <li><a class="brand" href="<%= root_path %>">Projectore</a></li>
        <li>
          <%= form_tag projects_path, method: :get, class: "navbar-form" do %>
              <div class="input-prepend">
                <span class="add-on"><i class="icon-search"></i></span>
                <%= text_field_tag :tag, nil, class: 'input-xlarge searchbar', placeholder: 'Search' %>
              </div>
          <% end %>
        </li>
      </ul>
      <ul class="nav pull-right nav-links">
        <li class="divider-vertical"></li>
        <li><div class="navbar-about"><%= link_to "What is Projectore?", about_path, :class => "multiline white" %></div></li>

        <li class="divider-vertical"></li>
        <li><div class="navbar-projects"><%= link_to "Browse Projects", projects_path, :class => "multiline white" %></div></li>

        <!--
        <li class="dropdown">

          <b class='caret dropdown-toggle white-toggle' data-toggle="dropdown">dd</b>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li class="nav-header">Nav header</li>
            <li><a href="#">Separated link</a></li>
            <li><a href="#">One more separated link</a></li>
          </ul>
        </li>

        //-->
        <li class="divider-vertical"></li>


        <% if user_signed_in? %>
        <li>
          <div class="btn-group">
            <a class="btn" href="<%= user_profile_path(current_user.profile) %>"><i class="icon-user icon-black"></i> <%= current_user.username %></a>
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret caret-white"></span></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "Profile", user_profile_path(current_user.profile) %>
              </li>

              <li>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
              </li>

            </ul>
          </div>
        </li>
        <li class="divider-vertical"></li>

        <li><%= link_to "Sign Out", destroy_user_session_path, :class => "white", method: :delete %></li>
        <% else %>
	      <li><%= link_to "Sign Up", new_user_registration_path, :class => "white" %></li>
            <li class="divider-vertical"></li>
	      <li><%= link_to "Sign In", new_user_session_path, :class => "white" %></li>
        <% end %>

        <li class="divider-vertical"></li>

      </ul>
    </div>
  </div>
</div>

  <div id="alerts">
    <% flash.each do |name, msg| %>
      <div class="<%= bootstrap_alert_type(name) %>">
	      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
      </div>
    <% end %>
  </div>

  <% if current_page?(root_url) %>

    <%= render 'introbar' %>

  <% end %>

  <div id="content" class="container">

    <%= content_for?(:content) ? yield(:content) : yield %>

  </div>

  <%= render "layouts/footer" %>

</div>
</body>
</html>
