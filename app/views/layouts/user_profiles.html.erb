<% content_for :content do %>
    <div id="user-profile" class="row">			
      <div class="span3" id="user-sidebar">
        <div id="user-avatar">
          <%= avatar_tag(associated_user, class: 'img-polaroid', id: 'user-avatar') %>
        </div>

        <div id="user-info">
          <h3><strong><%= associated_user.username %></strong></h3>
          <p><%= render partial: 'user_profiles/contact', locals: {contact: associated_user.profile.card} %></p>
        </div>

        <div class="btn-group">
          <%= link_to 'Message', new_user_collaboration_invitation_path(associated_user), class: "btn btn-info" %>
					<!-- Button to trigger modal -->
					<a href="#myModal" role="button" class="btn btn-info" data-toggle="modal">
						Invite
					</a>
        </div>

        <div id="project-group">
          <div class="accordion">
            <div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#projects-associated" href="#projects-worked-on">
                  <h4>Projects Created</h4>
                </a>
              </div>
              <div id="projects-worked-on" class="accordion-body collapse in">
                <div class="accordion-inner">
                  <% associated_user.owned_projects.each do |project| %>
                    <%= link_to_project_profile(project) %></br>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#projects-associated" href="#projects-favored">
                  <h4>Collaborations</h4>
                </a>
              </div>
              <div id="projects-favored" class="accordion-body collapse">
                <div class="accordion-inner">
                  <% associated_user.projects.each do |project| %>
                    <%= link_to_project_profile(project) %></br>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="span9">
			  <%= content_for?(:user_profiles_content) ? yield(:user_profiles_content) : yield %>
      </div>
    </div>

		<!-- Modal -->
		<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<%= form_tag collaboration_invitations_path, method: "post" do |f| %>
		  <%= hidden_field_tag :invited_user_id, associated_user.id %>
			
		  <div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		    <h3 id="myModalLabel">Invite <%= associated_user.username %> to help with your project!</h3>
		  </div>
		
		  <div class="modal-body">
			  <div class="row-fluid">
				  <% if current_user.has_any_project? %>
				    <%= select_tag :project_id, options_from_collection_for_select(current_user.owned_projects,"id","name") %>
				  <% else %>
			      You have no projects to invite to!
				  <% end %>
			  </div>
		    <div class="row-fluid">
				  <%= label_tag :message %>
				  <%= text_area_tag :message %>    
				</div>
		  </div>
		  <div class="modal-footer">
		    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		    <%= submit_tag 'Invite', class: 'btn btn-primary' %>
		  </div>
			<% end %>
		</div>
<% end %>

<%= render template: "layouts/application" %>